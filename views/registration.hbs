<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="/style.css" />
  <title>Document</title>
</head>

<body>
  <nav>
    <h4>Node MySQl - REGISTRATION</h4>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/login">Login</a></li>
    </ul>
  </nav>
  <div class="container mt-4">
    <div class="card">
      <div class="card-header">
        <h1> Register From </h1>
      </div>
      <div class="card-body">
        <form class="was-validated" action="/auth/registration" method="POST">

          <div class="from-group needs-validation">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" aria-describedby="inputGroupPrepend"
              required />
            <div class="invalid-feedback">
              Please enter a Name
            </div>
          </div>
          <div class="from-group">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="email" name="email" required />
            <div class="invalid-feedback">
              Please enter Valid Email Address
            </div>
          </div>
          <div class="from-group">
            <label for="gender" class="form-label">Gender</label>
            <div><input type="radio" value="male" name="gender" required><label>Male</label>
              <input type="radio" value="female" name="gender" required><label>Female</label>
            </div>
            <div class="from-group">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required />
              <div class="invalid-feedback">
                Please enter a Password
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Register User</button>
        </form>
      </div>
    </div>
    {{#if message}}
    <h4 class="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>